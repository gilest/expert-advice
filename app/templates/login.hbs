<div class="login-form d-flex h-100">
  <div class="m-auto">
    <form>
      <div class="form-group">
        <label for="exampleInputEmail1">Email</label>
        {{input value=email type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email"}}
      </div>
      <div class="form-group">
        <label for="exampleInputPassword1">Password</label>
        {{input value=password type="password" class="form-control" id="exampleInputPassword1" placeholder="Password"}}
      </div>
      <button type="submit" class="btn btn-primary login-form__submit" {{action 'login' email password}}>Log in</button>
      or {{#link-to "register"}}Register{{/link-to}}
    </form>
    {{#if errorMessage}}
      <div class="login-form__error pt-2 text-danger">{{errorMessage}}</div>
    {{/if}}
  </div>
</div>
